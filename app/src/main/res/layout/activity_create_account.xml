<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esther.myFirstApplication.CreateAccountActivity"
    android:padding="24dp"
    android:background="@drawable/union3">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create \nAccount :)"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="54dp"/>
    <EditText
        android:id="@+id/emailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email ID"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        android:textSize="30dp"
        android:layout_margin="30dp"/>
    <EditText
        android:id="@+id/createUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Create Username"
        app:layout_constraintTop_toBottomOf="@+id/emailId"
        android:textSize="30dp"
        android:layout_margin="30dp"/>
    <EditText
        android:id="@+id/createPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Create Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/createUsername"
        android:textSize="30dp"
        android:layout_margin="30dp"/>
    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_marginTop="40dp"
        android:backgroundTint="#000"
        app:layout_constraintTop_toBottomOf="@+id/createPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>